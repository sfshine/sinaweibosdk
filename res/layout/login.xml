<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/main_bg">
  
  
  
  <Button android:id="@+id/btn_add_accoutn"
  		  android:layout_width="wrap_content"
  		  android:layout_height="wrap_content"
  		  android:background="@drawable/add_account_d"
  		  android:layout_gravity="right"
  		  android:layout_marginTop="10dip"
  		  android:layout_marginRight="10dip"
  		  />
  
  
  
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/head_bg"
  android:layout_gravity="center"
  android:gravity="center"
  android:layout_marginTop="10dip">
  
  	<ImageView android:id="@+id/imge_user_head"
  	android:layout_width="80dp"
    android:layout_height="80dp"
  	android:src="@drawable/user_head"/>
  	
  	
  </LinearLayout>
  
  
  <LinearLayout
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:gravity="center"
  android:layout_marginTop="10dip">
  
  
  <TextView android:id="@+id/txt_login_show_name"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/input"
  android:gravity="center"
  />
  
  <Button android:id="@+id/btn_user_selected"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:background="@drawable/btn_user_selected_d"
   
   />
  
  
  </LinearLayout>
  
  
    <Button android:id="@+id/btn_login"
  		  android:layout_width="wrap_content"
  		  android:layout_height="wrap_content"
  		  android:background="@drawable/login_d"
  		  android:layout_gravity="center"
  		  android:layout_marginTop="10dip"
  		  android:text="@string/login"
  		  android:textColor="@color/white"
  		  android:textSize="20dip"
  		 />
  
  
  
</LinearLayout>